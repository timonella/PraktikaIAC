<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <connectionStrings>
        <!-- Пример строки подключения к PostgreSQL -->
        <add name="EventSyncDb" 
             connectionString="Host=localhost;Port=5432;Database=eventsync;Username=postgres;Password=your_password;Pooling=true;MinPoolSize=5;MaxPoolSize=20" />
    </connectionStrings>
    
    <appSettings>
        <!-- Путь для сохранения дампов -->
        <add key="DumpOutputPath" value="C:\EventSync\Dumps" />
        
        <!-- Путь для временных файлов -->
        <add key="TempPath" value="C:\EventSync\Temp" />
        
        <!-- Путь для файловых вложений -->
        <add key="FilesPath" value="C:\EventSync\Files" />
        
        <!-- Стратегия разрешения конфликтов по умолчанию -->
        <!-- Возможные значения: ServerWins, ClientWins, LastWriteWins, Merge, Manual -->
        <add key="DefaultConflictStrategy" value="LastWriteWins" />
        
        <!-- Размер батча для обработки данных -->
        <add key="BatchSize" value="1000" />
        
        <!-- Время хранения nonce (в днях) -->
        <add key="NonceRetentionDays" value="90" />
    </appSettings>
</configuration>

